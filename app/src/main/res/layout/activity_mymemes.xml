<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f4424b"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="whaitua.penman.project.ames.ac.nz.badmemes.Mymemes">

    <ImageView
        android:id="@+id/starBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/star1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/homeBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/home"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/listBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/list"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My memes"
        android:layout_marginTop="122dp"
        android:id="@+id/mymemesBtn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/myfaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favourites"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/mymemesBtn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
